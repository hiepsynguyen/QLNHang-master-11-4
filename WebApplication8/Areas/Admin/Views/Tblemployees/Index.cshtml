@model IEnumerable<DAL.QLNHangData.Tblemployee>

@{
    ViewData["Title"] = "Danh mục nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<p>
    <a asp-action="Create" class="btn btn-success btn-flat btn-sm">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã số
            </th>
            <th>
                Tên
            </th>
            <th>
                Năm sinh
            </th>
            <th>
                Địa chỉ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpNm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirDt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDr)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-sm btn-flat btn-warning" asp-route-id="@item.EmpId"><i class="fa fa-pencil"></i></a> |
                @*<a asp-action="Details" asp-route-id="@item.EmpId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.EmpId" class="btn btn-sm btn-flat btn-danger"><i class="fa fa-close"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
