@model IEnumerable<DAL.QLNHangData.Tbldeparment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success btn-sm btn-flat">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Tên
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeqNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepNm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeqNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepId" class="btn btn-sm btn-flat btn-warning"><i class="fa fa-pencil"></i></a> |
                @*<a asp-action="Details" asp-route-id="@item.DepId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.DepId" class="btn btn-sm btn-flat btn-danger"><i class="fa fa-close"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
